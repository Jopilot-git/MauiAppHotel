<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F9FAFB">


    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Suíte Super Luxo" 
               TextColor="#2563EB"
               FontFamily="Exo2"
               FontSize="30"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10" >
            <HorizontalStackLayout Spacing="40">
                
                <HorizontalStackLayout Spacing="4">
                    <Label Text="Adultos: "/>
                    <Label Text=" 2" TextColor="{StaticResource Primary}"/>


                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="4">
                    <Label Text="Crianças:"/>
                <Label Text="2" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>


            </HorizontalStackLayout>
                        
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto, auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: "/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: "/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia "/>

                <Label Grid.Row="1" Grid.Column="0" Text="04/04/2025"/>
                <Label Grid.Row="1" Grid.Column="1" Text="16/05/2025 "/>
                <Label Grid.Row="1" Grid.Column="2" Text="38"/>


            </Grid>

        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>

                <Label Text="Valor total:"/>
                <Label Text=" RS$ 900,00"/>
                
            </HorizontalStackLayout>
            
        </Frame>

        <Button Text="Voltar" HorizontalOptions="Center" Clicked="Button_Clicked" BackgroundColor="CornflowerBlue"/>



    </VerticalStackLayout>
</ContentPage> 