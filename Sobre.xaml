<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             BackgroundColor="#F9FAFB">
    
    
    <VerticalStackLayout Padding="10" Spacing="10"> 
        
        <Label Text="Este aplicativo foi desenvolvido para facilitar reservas de hotéis, visualizar acomodações e acessar informações de forma rápida e intuitiva." 
               TextColor="{StaticResource Gray600}" FontSize="20" />

         <Label  Text="Desenvolvido por: Jonathan"  FontSize="30" TextColor="{StaticResource Gray600}" FontFamily="PinyonScript" />
        
         <Label  Text="Ano: 2025"  FontSize="Small" TextColor="{StaticResource Gray600}" />

        <Button x:Name="voltar" Clicked="voltar_Clicked" Text="Home" BackgroundColor="CornflowerBlue"
        TextColor="{StaticResource Gray600}"  FontSize="15"  CornerRadius="10"  Padding="10" Grid.Row="4" Grid.Column="0" 
         HorizontalOptions="Start" VerticalOptions="Start" />
        
        
    </VerticalStackLayout>

    
        


    





</ContentPage>